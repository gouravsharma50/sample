@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/images/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login">
                    @Html.AntiForgeryToken()
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3">Sign in</p>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <span class="text-danger">@Model.ErrorMessage</span>
                        }
                    </div>

                    <div class="form-outline mb-4">
                        @Html.LabelFor(x=>x.Email,new {@class="form-label", @for="Email"})<span class="text-danger">*</span>
                        @Html.TextBoxFor(x=>x.Email, new {@class="form-control form-control-lg", @placeholder="Enter Email"})
                        @Html.ValidationMessageFor(x=>x.Email,null, new {@class="text-danger"})
                    </div>

                    <div class="form-outline mb-3">
                        @Html.LabelFor(x=>x.Password,new {@class="form-label", @for="Password"})<span class="text-danger">*</span>
                        @Html.TextBoxFor(x=>x.Password, new {@class="form-control form-control-lg", @placeholder="Enter password", @type="password"})
                        @Html.ValidationMessageFor(x=>x.Password,null, new {@class="text-danger"})
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="RememberMe" name="RememberMe" />
                            <label class="form-check-label" for="RememberMe">
                                Remember me
                            </label>
                        </div>
                        <a asp-action="ForgetPassword" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-action="Signup"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
        <!-- Copyright -->
        <div class="text-white mb-3 mb-md-0">
            Copyright © 2020. All rights reserved.
        </div>
        <!-- Copyright -->
        <!-- Right -->
        <div>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-google"></i>
            </a>
            <a href="#!" class="text-white">
                <i class="fab fa-linkedin-in"></i>
            </a>
        </div>
        <!-- Right -->
    </div>
</section>

